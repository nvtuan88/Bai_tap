@page
@model IndexModel


@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Phone</h1>
</div>
<div class="card-columns">
    @foreach (var pro in Model.Products)
    {
        <div class="card">

            <div class="card-img" style="background-image:url('@pro.Image');"></div>
            <div class="card-body">
                <h4 class="card-title">@pro.Name</h4>
            </div>
            <div class="card-footer"><p class="card-text">Price: @pro.Price</p></div>
         </div>
    }
</div>